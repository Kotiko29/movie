.page-header
  width 100%
  height 50px
  background-color #546778
  display flex
  align-items center
  .hamb
    display none
    @media (max-width: 768px)
      display block
      position absolute
      width 30px
      height 20px
      right 30px
      top 20px
      cursor pointer
    .hamb-line
      transition all 0.3s
      display block
      width 30px
      height 3px
      background-color #fff
      margin-bottom 6px
      cursor pointer
  .hamb-close span
    &:nth-child(1)
      transform translate(6px, -1px) rotate(45deg)
      transform-origin left top
    &:nth-child(2)
      transform scale(0)
    &:nth-child(3)
      transform translate(-3px, -20px) rotate(-45deg)
      transform-origin right bottom
