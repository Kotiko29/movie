@import '../../../node_modules/normalize-styl/normalize.styl'
@import './fonts'
@import './icons'
@import './header'
@import './category'
@import './sidebar'
@import './post'

*
  box-sizing border-box

html
  height 100%

body
  height 100%
  font-family Futura
  font-size 24px
  font-weight normal
  line-height 24px
  color #fff
  display flex
  flex-direction column
  height 100%
  background-color #1e252b

.container
  width 1160px
  max-width 100%
  margin 0 auto

.title-wrap
  background-color #546778
  margin 0
  padding 10px
  h2 
    font-size 24px
    font-weight normal
    line-height 24px
    margin 0
  
.main-content
  display flex
  flex-direction row

.sidebar
  width 20%
  margin-right 30px
  margin-top 30px
  .categories-list
    list-style none
    margin 0
    padding 0
    .categories-item
      padding-top 20px
      padding-left 10px

.content
  width 70%
  margin-top 30px
  .content-list
    list-style none
    margin 0
    padding 0

.wrapper
  flex 1 0 auto

footer
  flex 0 0 auto