@import '../../../node_modules/normalize-styl/normalize.styl'
@import './fonts'
@import './icons'
@import './header'
@import './category'
@import './sidebar'
@import './post'

*
  box-sizing border-box

html
  height 100%

body
  height 100%
  font-family Roboto
  font-size 18px
  font-weight 200
  line-height 24px
  color #fff
  display flex
  flex-direction column
  height 100%
  background-color #1e252b

.container
  width 1400px
  max-width 100%
  margin 0 auto

.title-wrap
  background-color #546778
  margin 0
  padding 10px
  h2 
    font-size 24px
    font-weight 300
    line-height 24px
    margin 0
  
.main-content
  display flex
  flex-direction row

.content
  width 70%
  margin-top 30px
  .content-list
    display flex
    justify-content space-between
    flex-wrap wrap
    list-style none
    margin 0
    padding 0
    .content-item
      width calc((100% - 4 * 10px)/ 5)
      height 300px
      margin-top 20px
      margin-bottom 10px
      .content-item-preview
        height 85%
        background-image url(../img/678975.jpg)
        background-repeat no-repeat
        background-size contain 
      .content-item-info
        display block
        width 70%
        span
          // display inline-block
          font-size 14px
          &:first-child
            color orange
            margin-right 5px
          &:last-child
            color orange
            margin-left 5px

    
    

.wrapper
  flex 1 0 auto

footer
  flex 0 0 auto
  margin-top 20px
  .footer-container
    display flex
    flex-direction column
    align-items center