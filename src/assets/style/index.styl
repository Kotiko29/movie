@import '../../../node_modules/normalize-styl/normalize.styl'
@import './fonts'
@import './icons'
@import './header'
@import './category'
@import './sidebar'
@import './post'

*
  box-sizing border-box

html
  height 100%

body
  height 100%
  font-family Roboto
  font-size 18px
  font-weight 200
  line-height 24px
  color #fff
  display flex
  flex-direction column
  height 100%
  background-color #1e252b

.container
  width 1400px
  max-width 100%
  margin 0 auto
  @media (max-width: 1160px)
    width 768px
    padding-right 10px
    padding-left 10px
  @media (max-width: 768px)
    width 100%

a 
  text-decoration none
  color white
  &:hover
    color #f39c11

.title-wrap
  background-color #546778
  margin 0
  padding 10px
  h2 
    font-size 24px
    font-weight 300
    line-height 24px
    margin 0
  
.main-content
  display flex
  flex-direction row

.content
  width 70%
  margin-top 30px
  @media (max-width: 768px)
    width 100%
  .content-list
    display flex
    justify-content space-between
    flex-wrap wrap
    list-style none
    margin 0
    padding 0
    margin-top 20px
    margin-bottom 10px
    @media (max-width: 768px)
      justify-content center
    .content-link
      display flex
      flex-direction column
      justify-content center
      width 19%
      padding-bottom 15px
      text-decoration none
      color white
      @media (max-width: 1160px)
        width 30%
      @media (max-width: 768px)
        width 80%
      .content-item-preview
        display flex
        justify-content center
        overflow hidden
        @media (max-width: 768px)
          height 100%
          max-height 790px
        img
          width 100%
          height 100%
          // max-height 100%
          // max-width 100%
          @media (max-width: 768px)
            width 75%
      .content-item-info
        display block
        width 70%
        @media (max-width: 768px)
          width 100%
          text-align center
          margin-top 5px
        
        span
          // display inline-block
          font-size 14px
          &:first-child
            color orange
            margin-right 5px
          &:last-child
            color orange
            margin-left 5px

.wrapper
  flex 1 0 auto

footer
  flex 0 0 auto
  margin-top 150px
  .footer-container
    display flex
    flex-direction column
    align-items center